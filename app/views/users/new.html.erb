<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div>
      <h2>Form Invalid</h2>
      <ul>
        <% @user.errors.full_messages do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </fieldset>
  <fieldset>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </fieldset>
  <fieldset>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </fieldset>
  <div>
    <%= f.submit "Create Account" %>
  </div>
<% end %>


